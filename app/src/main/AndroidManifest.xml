<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mikazuki.android.matsumatsuyo" >

    <!-- [START gcm_permission] -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.VIBRATE"/>
    <!-- [END gcm_permission] -->

    <permission
        android:name="app.android.ttp.mikazuki.matsumatsuyo.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />
    <uses-permission android:name="app.android.ttp.mikazuki.matsumatsuyo.permission.C2D_MESSAGE" />
    <uses-permission android:name="app.android.ttp.mikazuki.matsumatsuyo.c2dm.permission.RECEIVE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- [START gcm_receiver] -->
        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="app.android.ttp.mikazuki.matsumatsuyo" />
            </intent-filter>
        </receiver>
        <!-- [END gcm_receiver] -->


        <!-- [START gcm_listener] -->
        <service
            android:name=".ui.gcm.MyGcmListenerService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>
        <!-- [END gcm_listener] -->
        <!-- [START instanceId_listener] -->
        <service
            android:name=".ui.gcm.MyInstanceIDListenerService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID" />
            </intent-filter>
        </service>
        <!-- [END instanceId_listener] -->
        <service
            android:name=".ui.gcm.RegistrationIntentService"
            android:exported="false" >
        </service>

        <activity
            android:name=".YoActivity"
            android:label="@string/title_activity_yo" >
        </activity>

        <receiver
            android:name=".MyPostNotificationReceiver"
            android:permission="com.google.android.c2dm.permission.SEND"
            android:exported="true" >
            <intent-filter>
                <action android:name="app.android.ttp.mikazuki.matsumatsuyo.UPDATE_STATUS" />
                <action android:name="app.android.ttp.mikazuki.matsumatsuyo.SHOW_NOTIFICATION" />
                <category android:name="app.android.ttp.mikazuki.matsumatsuyo" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
